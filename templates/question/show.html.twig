{% extends 'base.html.twig' %}

{% block title %}Détails de la question{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Détails de la question</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ question.texte }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_question_index') }}" class="btn btn-secondary me-2">Retour à la liste</a>
        <a href="{{ path('app_question_edit', {'id': question.id}) }}" class="btn btn-primary me-2">Modifier</a>
        {{ include('question/_delete_form.html.twig') }}
        <!-- Bouton pour ajouter une réponse -->
        <a href="{{ path('app_reponse_new', {'question_id': question.id}) }}" class="btn btn-success me-2">Ajouter une réponse</a>
    </div>
</div>
{% endblock %}
