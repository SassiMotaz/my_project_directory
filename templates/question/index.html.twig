{% extends 'base.html.twig' %}

{% block title %}Liste des questions{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des questions</h1>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Texte</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.texte }}</td>
                <td>
                    <a href="{{ path('app_question_show', {'id': question.id}) }}" class="btn btn-info btn-sm me-1">Voir</a>
                    <a href="{{ path('app_question_edit', {'id': question.id}) }}" class="btn btn-primary btn-sm me-1">Modifier</a>
                    {{ include('question/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_question_new') }}" class="btn btn-success">Créer une nouvelle question</a>
</div>
{% endblock %}
