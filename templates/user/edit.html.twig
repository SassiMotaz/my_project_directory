{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Card -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-info text-white text-center">
                    <h3 class="mb-0">Modifier l'utilisateur</h3>
                </div>

                <div class="card-body p-4">
                    <!-- Formulaire -->
                    {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>

                <div class="card-footer text-center">
                    <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Retour à la liste
                    </a>
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
