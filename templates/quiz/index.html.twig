{% extends 'base.html.twig' %}

{% block title %}Liste des Quiz{% endblock %}

{% block body %}
<h1 class="mb-4 text-center">üìò Liste des Quiz</h1>

<table class="table table-striped text-center">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for quiz in quizzes %}
        <tr>
            <td>{{ quiz.id }}</td>
            <td>{{ quiz.titre }}</td>
            <td>{{ quiz.description }}</td>
            <td>
                <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}" class="btn btn-info btn-sm">üëÅÔ∏è Voir</a>

                {# ‚úÖ Afficher Modifier seulement pour PROFESSEUR ou ADMIN #}
                {% if is_granted('ROLE_PROFESSEUR') or is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-warning btn-sm">‚úèÔ∏è Modifier</a>
                {% endif %}

                {# ‚úÖ Bouton pour jouer visible √† tous #}
                <a href="{{ path('quiz_play', {'id': quiz.id}) }}" class="btn btn-success btn-sm">‚ñ∂Ô∏è Jouer</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4" class="text-center text-muted">Aucun quiz trouv√©.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# ‚úÖ Bouton "Cr√©er" visible seulement pour PROFESSEUR ou ADMIN #}
{% if is_granted('ROLE_PROFESSEUR') or is_granted('ROLE_ADMIN') %}
<div class="text-center mt-3">
    <a href="{{ path('app_quiz_new') }}" class="btn btn-primary">‚ûï Cr√©er un nouveau quiz</a>
</div>
{% endif %}
{% endblock %}
