{% extends 'base.html.twig' %}

{% block title %}Liste des Quiz{% endblock %}

{% block body %}
<div class="container mt-4">

    <h1 class="mb-4 text-center">ðŸ“˜ Liste des Quiz</h1>

    <table class="table table-striped table-hover text-center align-middle">
        <thead class="table-dark">
            <tr>
                {% if is_granted('ROLE_PROFESSEUR') %}
                    <th>ID</th>
                {% endif %}
                <th>Titre</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for quiz in quizzes %}
                <tr>
                    {% if is_granted('ROLE_PROFESSEUR') %}
                        <td>{{ quiz.id }}</td>
                    {% endif %}

                    <td>{{ quiz.titre }}</td>
                    <td>{{ quiz.description }}</td>

                    <td>
                        <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}" 
                           class="btn btn-info btn-sm text-white">
                            <i class="bi bi-eye"></i> Voir
                        </a>

                        {% if is_granted('ROLE_PROFESSEUR') %}
                            <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" 
                               class="btn btn-warning btn-sm text-white">
                                <i class="bi bi-pencil-square"></i> Modifier
                            </a>
                        {% endif %}

                        <a href="{{ path('quiz_play', {'id': quiz.id}) }}" 
                           class="btn btn-success btn-sm">
                            <i class="bi bi-play-fill"></i> Jouer
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">
                        Aucun quiz trouvÃ©.
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_PROFESSEUR') %}
        <div class="text-center mt-3">
            <a href="{{ path('app_quiz_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> CrÃ©er un nouveau quiz
            </a>
        </div>
    {% endif %}

</div>
{% endblock %}
