{{ form_start(form) }}
    {% for child in form %}
        <div class="mb-3">
            {{ form_label(child, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(child, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(child) }}
        </div>
    {% endfor %}

    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
