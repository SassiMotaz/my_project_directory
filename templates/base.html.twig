<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}CliniKids{% endblock %}</title>

            <!-- ✅ Bootstrap CSS -->
            <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
            >
    <script src="https://kit.fontawesome.com/a2d9d6e1f4.js" crossorigin="anonymous"></script>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    rel="stylesheet"
    >

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa;
            color: #333;
            font-family: "Poppins", Arial, sans-serif;
        }

        /* ✅ Navbar améliorée */
        .navbar {
            background-color: #00bcd4 !important;
            padding: 0.8rem 2rem;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            font-weight: 600;
            color: #fff !important;
            font-size: 1.3rem;
            letter-spacing: 0.5px;
        }

        .navbar-brand img {
            height: 55px;
            margin-right: 10px;
        }

        .navbar-nav .nav-link {
            color: #fff !important;
            margin: 0 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .navbar-nav .nav-link:hover {
            text-decoration: underline;
        }

        .btn-login {
            background-color: #fff;
            color: #00bcd4;
            font-weight: 600;
            border: none;
            padding: 8px 18px;
            border-radius: 30px;
            transition: 0.3s;
        }

        .btn-login:hover {
            background-color: #e0f7fa;
        }

        /* ✅ Main content */
        main {
            flex: 1;
            padding: 60px 20px;
        }

        /* ✅ Footer modernisé */
        footer {
            background-color: #00bcd4;
            color: white;
            text-align: center;
            padding: 15px 0;
            margin-top: auto;
            font-size: 0.95rem;
            letter-spacing: 0.5px;
        }
    </style>

{% block stylesheets %}{% endblock %}
    </head>

    <body>
        <!-- ✅ Navbar Bootstrap -->
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_home') }}">
                    <img src="{{ asset('images/logopng.png') }}" alt="Logo">
                    CliniKids
                </a>

                <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarNav"
                aria-controls="navbarNav"
                aria-expanded="false"
                aria-label="Toggle navigation"
                >
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="nav-item">
                        {% if app.user %}
                          <a class="nav-link" href="{{ path('app_cours_index') }}">Cours</a>
                        {% else %}
                          <a class="nav-link" href="{{ path('app_login') }}">Cours</a>
                        {% endif %}
                    </li>
                    <li class="nav-item">
                      {% if app.user %}
                        <a class="nav-link" href="{{ path('app_forum_post_index') }}">Forum</a>
                      {% else %}
                        <a class="nav-link" href="{{ path('app_login') }}">Forum</a>
                      {% endif %}
                    </li>
                    <li class="nav-item">
                      {% if app.user %}
                        <a class="nav-link" href="{{ path('app_quiz_index') }}">Quiz</a>
                      {% else %}
                        <a class="nav-link" href="{{ path('app_login') }}">Quiz</a>
                      {% endif %}
                    </li>
                    {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_user_index') }}">Gestion des utilisateurs</a></li>
                    {% endif %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_about') }}">À propos</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_contact') }}">Contact</a></li>

                    {% if app.user %}
                        <li class="nav-item d-flex align-items-center ms-3">
                            <img
                            src="https://bootdey.com/img/Content/avatar/avatar7.png"
                            alt="User"
                            height="32"
                            class="rounded-circle me-2 border border-light"
                            >
                            <a class="nav-link fw-semibold" href="{{ path('app_user_show', {'id': app.user.id}) }}">
                                {{ app.user.username }}
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item ms-3">
                            <button class="btn-login" onclick="window.location.href='{{ path('app_login') }}'">
                                Connexion
                            </button>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- ✅ Contenu principal -->
    <main class="container">
    {% block body %}{% endblock %}
    </main>

    <!-- ✅ Footer -->
    <footer>
        <p>© {{ "now"|date("Y") }} CliniKids — Tous droits réservés.</p>
    </footer>

    <!-- ✅ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    {% block javascripts %}
    {% endblock %}
    </body>
    </html>
