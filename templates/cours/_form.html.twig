{# _form.html.twig #}
<div class="mb-3">
    {{ form_label(form.title, 'Titre du cours', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le titre du cours'}}) }}
</div>

<div class="mb-3">
    {{ form_label(form.content, 'Contenu du cours', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '6', 'placeholder': 'Décrivez le contenu du cours...'}}) }}
</div>

<div class="mb-3">
    {{ form_label(form.filePath, 'Lien de Fichier du cours', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.filePath, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le lien de fichier du cours'}}) }}
</div>

<div class="mb-3">
    {{ form_label(form.Lien, 'Lien de la vidéo', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.Lien, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le lien de la vidéo du cours'}}) }}
</div>

<div class="mb-3">
    {{ form_label(form.createdat, 'Date de création', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.createdat, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="mb-3">
    {{ form_label(form.prof, 'Professeur', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.prof, {'attr': {'class': 'form-select'}}) }}
</div>

<div class="d-flex justify-content-between mt-4">
    <a href="{{ path('app_cours_index') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Retour à la liste
    </a>
    <button class="btn btn-primary">
        <i class="bi bi-save"></i> {{ button_label|default('Enregistrer') }}
    </button>
</div>

{% if button_label is defined and button_label == 'Update' %}
    {{ include('cours/_delete_form.html.twig') }}
{% endif %}

{% if form.vars.errors|length > 0 %}
<div class="alert alert-danger mt-3">
    <h5>Form Errors:</h5>
    <ul>
        {% for error in form.vars.errors %}
            <li>{{ error.message }}</li>
        {% endfor %}
    </ul>
</div>
{% endif %}
