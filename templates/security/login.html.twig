{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg rounded-4">
                <div class="card-body">
                    <h3 class="text-center mb-4">Se connecter</h3>

                    {% if error %}
                        <div class="alert alert-danger text-center">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="alert alert-info text-center">
                            Connecté en tant que <strong>{{ app.user.userIdentifier }}</strong> |
                            <a href="{{ path('app_logout') }}">Déconnexion</a>
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}" {{ form_enctype(form) }}>
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Adresse e-mail</label>
                            <input
                                type="email"
                                name="email"
                                id="inputEmail"
                                class="form-control"
                                value="{{ last_username }}"
                                autocomplete="email"
                                required
                                autofocus
                            >
                        </div>

                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Mot de passe</label>
                            <input
                                type="password"
                                name="password"
                                id="inputPassword"
                                class="form-control"
                                autocomplete="current-password"
                                required
                            >
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="btn btn-primary w-100" type="submit">Se connecter</button>
                    </form>

                    <div class="text-center mt-3">
                        <p>Vous n'avez pas encore de compte ? 
                            <a href="{{ path('app_register') }}">Inscrivez-vous ici</a>.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
