{% extends 'base.html.twig' %}

{% block title %}Détails de la réponse{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Détails de la réponse</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reponse.id }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ reponse.texte }}</td>
            </tr>
            <tr>
                <th>Correcte</th>
                <td>
                    {% if reponse.correcte %}
                        <span class="badge bg-success">Oui</span>
                    {% else %}
                        <span class="badge bg-danger">Non</span>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Justification</th>
                <td>{{ reponse.justification }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_reponse_index') }}" class="btn btn-secondary me-2">Retour à la liste</a>
        <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}" class="btn btn-primary me-2">Modifier</a>
        {{ include('reponse/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
