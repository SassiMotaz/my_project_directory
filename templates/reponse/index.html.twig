{% extends 'base.html.twig' %}

{% block title %}Liste des réponses{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des réponses</h1>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Texte</th>
                <th>Correcte</th>
                <th>Justification</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.id }}</td>
                <td>{{ reponse.texte }}</td>
                <td>
                    {% if reponse.correcte %}
                        <span class="badge bg-success">Oui</span>
                    {% else %}
                        <span class="badge bg-danger">Non</span>
                    {% endif %}
                </td>
                <td>{{ reponse.justification }}</td>
                <td>
                    <a href="{{ path('app_reponse_show', {'id': reponse.id}) }}" class="btn btn-info btn-sm me-1">Voir</a>
                    <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}" class="btn btn-primary btn-sm me-1">Modifier</a>
                    {{ include('reponse/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reponse_new') }}" class="btn btn-success">Créer une nouvelle réponse</a>
</div>
{% endblock %}
